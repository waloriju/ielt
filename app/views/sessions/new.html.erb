<h1>Login</h1>

<%= form_tag sessions_path, :class => 'well' do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password, "Senha" %>
    <%= password_field_tag :password %>
  </div>

  <div class="form-actions">
    <%= submit_tag "Login", :class => 'btn btn-large btn-success' %>
		ou <%= link_to 'resete sua senha', '/sessions/reset' %>
  </div>
<% end %>
