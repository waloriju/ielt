<%= form_for @evento, :html => {:class => 'well'} do |f| %>
<% if @evento.errors.any? %>
<div id="error_explanation" class="alert">
	<h2><%= pluralize(@evento.errors.count, "erro") %> impedem a continudade</h2>

	<ul>
		<% @evento.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>
